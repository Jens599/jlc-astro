---
import Layout from '../layouts/Layout.astro'
import HeroCard from '../components/HeroCard.astro'
import { homeCards } from '../data/home'
import { Icon } from 'astro-icon/components'
import hero from '../assets/Hero.jpg'
import { Image } from 'astro:assets'
---

<Layout title="Home | JLC Language School">
  <div class="grid h-3/4 grid-cols-2 w-full relative overflow-hidden">
    <Image
      src={hero}
      alt="Chureito Pagoda with Mount Fuji in the background, an iconic Japanese landmark"
      class="col-span-full place-self-center object-cover absolute -z-1 w-full"
    />
    <div
      class="flex relative flex-col items-end justify-center w-full text-white uppercase h-150"
    >
      <div class="flex flex-col items-end gap-4 font-bold">
        <span class="text-8xl text-shadow">Study In</span>
        <span class="text-8xl text-shadow">Japan</span>
        <a href="/studyInJapan">
          <div
            class="flex items-center gap-6 py-2 pr-2 pl-4 rounded-full bg-brand-red text-shadow shadow hover:bg-brand-green transition"
          >
            View Details
            <div class="p-2 text-2xl bg-white rounded-full aspect-square">
              <Icon name="arrow-right-icon" />
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</Layout>
