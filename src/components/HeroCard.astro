---
import { Icon } from 'astro-icon/components'

const { icon, alt, title, statement } = Astro.props
---

<div
	class="-translate-y-30 m-6 flex w-96 flex-col items-center gap-4 bg-white px-2 py-12 shadow-2xl"
>
	<div class="flex aspect-square w-1/3 items-center justify-center rounded-full bg-brand-green">
		<img src={icon} alt={alt} />
	</div>
	<div class="text-center text-2xl font-bold text-brand-blue">
		{title}
	</div>
	<div class="flex min-h-20 items-center justify-center text-center font-medium text-gray-700">
		{statement}
	</div>
	<a
		href="/studyInJapan"
		class="group/cta relative h-12 origin-right overflow-hidden rounded-full border-2 border-gray-300 px-4 py-2 font-bold outline transition"
	>
		<div class="relative z-10 flex items-center gap-4">
			<span class="delay-300 ease-in-out group-hover/cta:text-white"> Get Started </span>
			<div class="aspect-square rounded-full bg-brand-green p-2 text-white">
				<Icon name="arrow-right-icon" />
			</div>
		</div>
		<div
			class="absolute -right-3 -top-6 aspect-square w-16 -translate-y-6 scale-0 rounded-full bg-brand-green transition-transform duration-500 ease-in-out group-hover/cta:scale-[500%]"
		>
		</div>
	</a>
</div>
